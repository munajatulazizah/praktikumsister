    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        JFileChooser jfc = new JFileChooser();
        jfc.setCurrentDirectory(new File(System.getProperty("user.home")));
        //FileNameExtensionFilter filter = new FileNameExtensionFilter(".wav");
        //        bothFilter = new FileNameExtensionFilter("Gambar JPEG dan GIF", "jpg", "gif");
        jfc.setAcceptAllFileFilterUsed(false);
        //jfc.addChoosableFileFilter(filter);
        if (jfc.showOpenDialog(this) == JFileChooser.APPROVE_OPTION) {
            String f = jfc.getSelectedFile().toString();
            jTextField1.setText(f);
            File file = new File(f);
            InputStream in = null;
            try {
                in = new FileInputStream(f);
            } catch (FileNotFoundException ex) {
                Logger.getLogger(soal3.class.getName()).log(Level.SEVERE, null, ex);
            }
            AudioStream audioStream = null;
            try {
                audioStream = new AudioStream(in);
            } catch (IOException ex) {
                Logger.getLogger(soal3.class.getName()).log(Level.SEVERE, null, ex);
            }
            AudioPlayer.player.start(audioStream);
        }
        // TODO add your handling code here:
}                                        

